generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bookmark {
  id          String   @id @default(cuid())
  title       String
  url         String
  description String?
  category    String
  logoUrl     String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([category])
}

model CategoryOrder {
  id         String   @id @default(cuid())
  categories String[] // Array des cat√©gories dans l'ordre
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}